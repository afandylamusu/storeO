@using Lince.SportCenter.Models2.Inventory
@model SportFieldModel
@{
    Layout = "~/Administration/Views/Shared/_AdminPopupLayout.cshtml";
    ViewBag.Title = "SportFieldCreatePopup";
}

@using (Html.BeginForm())
{
    <div class="section-header">
        <div class="title">
            @T("Plugins.Lince.SportCenter.SportFields.AddNew.Title")
        </div>
        <div class="options">
            <button type="submit" name="save" value="save" class="btn btn-primary"><i class="fa fa-check"></i>&nbsp;@T("Admin.Common.Save")</button>
        </div>
    </div>
    @Html.Partial("_CreateOrUpdateSportField", Model)
}

